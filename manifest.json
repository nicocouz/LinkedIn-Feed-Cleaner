{
    "manifest_version": 3,
    "name": "LinkedIn Feed Cleaner",
    "version": "1.0.0",
    "description": "LinkedIn Feed Cleaner is a minimalist and efficient Chrome extension that allows you to control the visibility of suggested and sponsored posts in your LinkedIn feed.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/linkedin.png",
        "48": "icons/linkedin.png",
        "128": "icons/linkedin.png"
    }
}